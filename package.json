{
  "name": "cloudformation-explorer",
  "publisher": "JohnBrown",
  "displayName": "cloudformation explorer",
  "github": "https://github.com/JohnBrown0126/cloudformation-explorer",
  "description": "Visualise a cloudformation file with an explorer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cloudFormationView",
          "title": "Cloudformation Explorer",
          "icon": "resources/CloudFormation.svg",
          "locations": "bottom"
        }
      ]
    },
    "views": {
      "cloudFormationView": [
        {
          "id": "cloudformation-explorer",
          "name": "Explorer"
        },
        {
          "id": "cloudformation-analysis",
          "name": "Analyser"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "cloudformation-analysis",
        "contents": "No CloudFormation template analyzed yet."
      }
    ],
    "commands": [
      {
        "command": "cloudformation-explorer.refreshEntry",
        "title": "Cloudformation Explorer: Start"
      }
    ]
  },
  "scripts": {
    "vsce:package": "vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "js-yaml-cloudformation-schema": "^1.0.0"
  }
}
